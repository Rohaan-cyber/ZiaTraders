<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Zia Traders</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" crossorigin="anonymous">
  <script defer src="https://use.fontawesome.com/releases/v5.5.0/js/all.js" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i" rel="stylesheet">
  <link rel="stylesheet" href="main.css">
</head>
<body>
  <header class="header-bar mb-3">
    <div class="container d-flex flex-column flex-md-row align-items-center p-3">
      <h4 class="my-0 mr-md-auto font-weight-normal">
        <a href="/" class="text-white">Zia Traders</a>
      </h4>

      <!-- LOGIN FORM -->
      <form action="/login" method="POST" class="mb-0 pt-2 pt-md-0">
        <div class="row align-items-center">
          <div class="col-md mr-0 pr-md-0 mb-3 mb-md-0">
            <input name="username" class="form-control form-control-sm input-dark" type="text" placeholder="Username" autocomplete="off">
          </div>
          <div class="col-md mr-0 pr-md-0 mb-3 mb-md-0">
            <input name="password" class="form-control form-control-sm input-dark" type="password" placeholder="Password">
          </div>
          <div class="col-md-auto">
            <button class="btn btn-info btn-sm">Sign In</button>
          </div>
        </div>
      </form>
    </div>
  </header>

  <% if (login_error && login_error.length > 0) { %>
  <div class="alert alert-danger mt-2 text-center w-100">
    <%= login_error[0] %>
  </div>
  <% } %>

  <!-- Main Section -->
  <div class="container py-md-5">
    <div class="row align-items-start">
      
      <!-- LEFT COLUMN: Registration Form -->
      <div class="col-lg-6 pb-3 py-lg-5">
        <!-- REGISTER FLASH -->
        <% if (register_error && register_error.length > 0) { %>
          <% register_error.forEach(msg => { %>
            <div class="alert alert-danger mt-2 text-center w-100">
              <%= msg %>
            </div>
          <% }); %>
        <% } %>

        <% if (success_msg && success_msg.length > 0) { %>
          <% success_msg.forEach(msg => { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% }) %>
        <% } %>

        <!-- REGISTER FORM -->
        <form action="/register" method="POST" id="registration-form">
          <div class="form-group">
            <label for="username-register" class="text-muted mb-1">
              <small>Username</small>
            </label>
            <input name="username" id="username-register" class="form-control" type="text" placeholder="Pick a username" autocomplete="off">
          </div>

          <div class="form-group">
            <label for="isAdmin-register" class="text-muted mb-1">
              <small>Is Admin</small>
            </label>
            <br>
            <label>Yes</label> <input type="radio" name="isAdmin" value="yes">
            <label>No</label> <input type="radio" name="isAdmin" value="no">
          </div>

          <div class="form-group">
            <label for="password-register" class="text-muted mb-1">
              <small>Password</small>
            </label>
            <input name="password" id="password-register" class="form-control" type="password" placeholder="Create a password">
          </div>
     <h1>Shop Details</h1>
          <div class="form-group">
            <label for="password-register" class="text-muted mb-1">
              <small>Shop Name</small>
            </label>
            <input name="ShopName" id="ShopName-register" class="form-control" type="text" placeholder="Type a Shop Name">
          </div>

   <div class="form-group">
            <label for="bank1-register" class="text-muted mb-1">
              <small>Bank 1</small>
            </label>
            <input name="bank1" id="bank1-register" class="form-control" type="text" placeholder="Type Bank 1">
          </div>

   <div class="form-group">
            <label for="bank2-register" class="text-muted mb-1">
              <small>Bank 2</small>
            </label>
          <input name="bank2" id="bank2-register" class="form-control" type="text" placeholder="Type Bank 2">
          </div>

   <div class="form-group">
            <label for="bank3-register" class="text-muted mb-1">
              <small>Bank 3</small>
            </label>
            <input name="bank3" id="bank3-register" class="form-control" type="text" placeholder="Type Bank 3">
          </div>

   <div class="form-group">
            <label for="bank4-register" class="text-muted mb-1">
              <small>Bank 4</small>
            </label>
            <input name="bank4" id="bank4-register" class="form-control" type="text" placeholder="Type Bank 4">
          </div>
   <div class="form-group">
            <label for="bank5-register" class="text-muted mb-1">
              <small>Bank 5</small>
            </label>
            <input name="bank5" id="bank5-register" class="form-control" type="text" placeholder="Type Bank 5">
          </div>

        <button type="submit" class="py-3 mt-4 btn btn-lg btn-primary btn-block">Sign up for Zia Traders</button>
        </form>
      </div>

      <!-- RIGHT COLUMN: Registration Rules -->
      <div class="col-lg-6 pl-lg-5 pb-3 py-lg-5">
        <h1>Registration Rules</h1><br><br>
        <p>Username cannot be empty, must contain only letters and numbers, must be at least 3 characters, and cannot exceed 30 characters.</p><br>
        <p>Password cannot be empty, must be at least 12 characters, and cannot exceed 50 characters.</p>
      </div>
    </div>
  </div>

  <!-- footer -->
  <footer class="border-top text-center small text-muted py-3">
    <p class="m-0">
      Copyright &copy; <%= new Date().getFullYear() %> <a href="/" class="text-muted">Zia Traders</a>. All rights reserved.
    </p>
  </footer>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" crossorigin="anonymous"></script>
  <script>$('[data-toggle="tooltip"]').tooltip()</script>

  <script>
    // Remove flash messages after 8 seconds
    setTimeout(() => {
      document.querySelectorAll('.alert').forEach(alert => alert.remove())
    }, 8000);
  </script>
</body>
</html>





