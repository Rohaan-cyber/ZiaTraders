<!doctype html>
<html lang="en">
<head>
 <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Suppliers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body { min-height: 100vh; overflow-x: hidden; background-color: #bee7a5}

    .sidebar { min-width: 220px; max-width: 220px; background-color: #343a40; min-height: 100vh; color: white; }
    .sidebar a { color: white; text-decoration: none; }
    .sidebar a.active { background-color: #495057; }
    .sidebar a:hover { background-color: #495057; }
    .content { margin-left: 220px; padding: 20px; }
  </style>
</head>
<body>
  <%- include('includes/sidebar', { user: user, activePage: 'suppliers' }) %>
  <div class="content">
    <%- include('includes/header', { pageTitle: 'Frokht Kuninda', user: user }) %>
    <%- include('includes/flash', { success_msg: success_msg, error_msg: error_msg }) %>

    <div class="row mb-4">

    <div class="container">
   
    <form id="form-supplier" class="form form-striped" action="/create-supplier" method="POST">
         <div class="row">
        <div class="col">
    <label>Frokht Kuninda &nbsp; </label><input name="supName" type="text" class="form-control form-control-sm input-dark" style="width: 200px; display: inline">
      </div>

 <div class="col">
      <label>Phone Number &nbsp;</label><input name="supPhoneNum" type="text" class="form-control form-control-sm input-dark" style="width: 200px; display: inline">
      </div>
          </div><br>

            <div class="row">
     <div class="col">
      <label>Area&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label><input name="supArea" type="text" class="form-control form-control-sm input-dark" style="width: 200px; display: inline"><br><br>
    
        </div>

      
    
      <div class="col">
      <label>Province&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label><input name="supProvince" type="text" class="form-control form-control-sm input-dark" style="width: 200px; display: inline">
     </div>
     </div>
    <br><button class="btn btn-success btn-sm">New Frokht Kuninda</button>
   
   </form><br><br>
   </div>
      <div class="col">
        <div class="card">
          <div class="card-header bg-primary text-white">
            Frokht Kuninda List
          </div>
          <div class="card-body p-0">
            <table id="SupplierTable" class="table table-striped mb-0">
              <thead class="table-light">
                <tr>
                  <th>id</th>
                  <th>Frokht Kuninda</th>
                   <th>Payment Due</th>
                   <th>Phone</th>
                   <th>Area</th>
                   <th>Province</th>
                </tr>
              </thead>
              <tbody>
               <% if (suppliers.length > 0) { %>
      <% suppliers.forEach((sup, index) => { %>
        <tr>
          <td><%= sup.supplierId || '-' %></td>
          <td><%= sup.supName %></td>

          <td>
          <% if (sup.supPayDue > 0) { %>
          <%= Number(sup.supPayDue).toLocaleString() || 0 %>  Jama
         <% } else { %>
           <%= Number(sup.supPayDue * (-1)).toLocaleString() || 0 %>  Banam
         <% } %>
          </td>

          <td><%= sup.supPhoneNum || '-' %></td>
          <td><%= sup.supArea || '-' %></td>
           <td><%= sup.supProvince || '-' %></td>
         <td>
    <form action="/suppliers/delete/<%= sup._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this supomer?')">
      <button class="btn btn-danger btn-sm">Delete</button>
    </form>
      </td>


        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="7" class="text-center">No supliers found</td>
      </tr>
    <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
const form = document.getElementById('form-supplier');
const tableBody = document.querySelector('#SupplierTable tbody');

form.addEventListener('submit', function(e) {
    e.preventDefault(); // prevent default form submission

    // send form data to backend
const formData = new FormData(form)
const data = Object.fromEntries(formData.entries())

fetch('/create-supplier', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(data)
})

    .then(res => res.json())
    .then(data => {
        if (data.success) {
            const supp = data.supplier; // DB saved customer

            // Add row to table
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td>${supp.supplierId}</td>
<td>${supp.supName}</td>
<td>${supp.supPayDue || '-'}</td>
<td>${supp.supPhoneNum || '-'}</td>
<td>${supp.supArea || '-'}</td>
<td>${supp.supProvince || '-'}</td>

                <td><em>Saved</em></td>
            `;
            tableBody.appendChild(newRow);

            // Reset form
            form.reset();
        } else {
            alert('Failed to save customer: ' + (data.errors || []).join(', '))
        }
    })
    .catch(err => console.error(err))
});
</script>

</body>
</html>





